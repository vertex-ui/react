{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    "moduleResolution": "bundler",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@theme/*": ["src/theme/*"],
      "@icons/*": ["src/icons/*"],
      "@widgets/*": ["src/widgets/*"],
      "@hoc/*": ["src/hoc/*"],
      "@stories/*": ["src/stories/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,

    "importHelpers": true,
    "noEmitHelpers": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "resolveJsonModule": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "removeComments": false,
    "allowJs": false,

    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example", "tests"]
}
