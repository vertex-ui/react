{
  "compilerOptions": {
    "target": "ES2019", // Good balance for libraries
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // "baseUrl": "src", // Deprecated in TS 7.0, consider using project references or path mapping in jsconfig/tsconfig if needed
    "paths": {
      "@x-ui/*": ["./*"]
    },
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "allowJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example", "tests"],
  "ignoreDeprecations": "6.0"
}